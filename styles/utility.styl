
// Utility Mixins
// -------------------------

// Clearfix 

cf()
  *zoom: 1
  &:before
  &:after
    display: table
    content: ""
    line-height: 0
  &:after
    clear: both

// Utility styles
// -------------------------

// Clearfixes

// For modern browsers
.nav:before
.nav:after
.media:before
.media:after
.island:before
.island:after
.islet:before
.islet:after
.cf:before
.cf:after
    content:"";
    display:table;

.nav:after
.media:after
.island:after
.islet:after
.cf:after
    clear:both;

// For IE 6/7 (trigger hasLayout)

.nav
.media
.island
.islet
.cf
    *zoom:1;

