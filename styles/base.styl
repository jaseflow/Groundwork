
// Scaffolding
// -------------------------

*
	box-sizing(border-box)

html
	background: $site-bg 
	font-size: 100%
	-webkit-backface-visibility: hidden; // Addresses a small issue in webkit: http://bit.ly/NEdoDq
	-webkit-overflow-scrolling: touch 
	-webkit-tap-highlight-color: lighten($base-color, 75%)
	-webkit-text-size-adjust: 100% 
	-ms-text-size-adjust: 100%

body 
	background-color: transparent
	font-family: $base-font
	line-height: $base-line
	color: $base-color
	font-size()
	font-weight: $base-weight

// Soft resets
// -------------------------

img
	max-width: 100%
	height: auto

table
	width: 100%

// Removes the fluidness of images in Google Maps

#googlemap img
object
embed
	max-width: none

#map_canvas
embed
	max-width: none

#map_canvas img
	max-width: none

#map_canvas object
	max-width: none

// Links
// -------------------------

a
	color: $link-color
	text-decoration: none
		&:hover
			color: $link-color-hover
